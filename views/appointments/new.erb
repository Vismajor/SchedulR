<form action="/appointments" method="post">
  <label for="name">Title:</label>
  <input type="text" name="title" id="title"><br>

  <label for="start_date">Start date:</label>
  <input type="date" name="start_date" id="start_date" value="<%= Date.today %>"><br>
  <label for="start_time">Start time:</label>
  <input type="time" name="start_time" id="start_time" value="09:00"><br>


  <label for="end_date">End date:</label>
  <input type="date" name="end_date" id="end_date" value="<%= Date.today %>"><br>
  <label for="end_time">End time:</label>
  <input type="time" name="end_time" id="end_time" value="10:00"><br>

  <label for="location">Location:</label>
  <input type="text" name="location" id="location"><br>

  <label for="priority">Priority:</label>
  <input type="radio" name="priority" value="1" checked> 1<br>
  <input type="radio" name="priority" value="2"> 2<br>
  <input type="radio" name="priority" value="3"> 3<br>
  <input type="radio" name="priority" value="4"> 4<br>
  <input type="radio" name="priority" value="5"> 5

  <input type='submit' value="Create Appointment">
</form>