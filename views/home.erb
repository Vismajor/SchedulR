<div class="container">

  <div class="grid grid-4">
    <div class="panel __blue-background __box-shadow">
      <div class="panel-header">
        DATES - APPOINTMENTS - EVENTS
      </div>

      <ul class="panel-calendar-days">
        <% @calendar.day_order.each do |day_name| %>
          <li><%= day_name %></li>
        <% end %>
      </ul>

      <ul class="panel-calendar">
        <% @calendar.days.each do |day| %>
          <li <%= "class='__blue-pale'" if !day.current_month? %>>
            <%= day.day %>
            <% if @calendar.appointments_on( day ).length > 0 %>
              <span class="__calendar-appt"></span>
            <% end %>

          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <%= erb( :'appointments/show' ) %>
  <%= erb :'appointments/new' %>

</div>
